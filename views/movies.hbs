<h1>Ironhack Cinema</h1>
<p>Click on the movie to check the showtimes!</p>
<div id="list-of-movies">
    {{#each movies}}
    <div id="{{this.title}}">
        <img class="movie-image" src="{{this.image}}" alt="{{this.title}} cover">
        <p class="movie-title">{{this.title}}</p>
        <a class = "movie-details" href="/movies/{{this._id}}">See more</a>
    </div>
    {{/each}}
</div>